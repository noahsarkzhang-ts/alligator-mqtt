<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.noahsark.mqtt.broker.mybatis.StoredMessageMapper">

    <select id="getMessage" resultType="StoredMessage">
        select * from t_stored_message where topic = #{topic} and offset = #{offset}
    </select>

    <insert id="addMessage" parameterType="StoredMessage" useGeneratedKeys="true"
            keyProperty="id">
        insert into t_stored_message (topic,qos,payload,offset)
        values (#{topic},#{qos},#{payload},#{offset})
    </insert>

    <select id="getAllMessage" resultType="StoredMessage">
        select * from t_stored_message where topic = #{topic} and offset >= #{offset}
    </select>

</mapper>