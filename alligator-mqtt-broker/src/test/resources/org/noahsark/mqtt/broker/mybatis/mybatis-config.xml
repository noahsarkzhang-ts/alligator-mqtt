<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="org/noahsark/mqtt/broker/mybatis/config.properties">
    </properties>

    <typeAliases>
        <typeAlias alias="StoredMessage" type="org.noahsark.mqtt.broker.protocol.entity.StoredMessage"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="org/noahsark/mqtt/broker/mybatis/StoredMessageMapper.xml"/>
    </mappers>

</configuration>